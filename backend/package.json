{
    "name": "@foundersnet/backend",
    "version": "1.0.0",
    "private": true,
    "description": "FoundersNet Fastify backend server",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "clean": "rm -rf dist",
        "lint": "eslint src --ext .ts",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@fastify/cors": "^9.0.1",
        "@fastify/static": "^7.0.4",
        "@fastify/view": "^9.1.0",
        "dotenv": "^16.4.5",
        "ejs": "^3.1.10",
        "fastify": "^4.28.1",
        "viem": "^2.21.45"
    },
    "devDependencies": {
        "@types/ejs": "^3.1.5",
        "@types/node": "^20.11.0",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "eslint": "^8.57.0",
        "pino-pretty": "^11.3.0",
        "tsx": "^4.19.2",
        "typescript": "^5.6.3",
        "vitest": "^2.1.8"
    }
}