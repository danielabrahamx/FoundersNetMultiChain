<% if (typeof bets !=='undefined' && bets.length> 0) { %>
    <!-- Stats Summary -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
        <div class="card-glass rounded-xl p-4 text-center">
            <p class="text-gray-400 text-sm mb-1">Total Bets</p>
            <p class="text-2xl font-bold text-white">
                <%= bets.length %>
            </p>
        </div>
        <div class="card-glass rounded-xl p-4 text-center">
            <p class="text-gray-400 text-sm mb-1">Total Wagered</p>
            <p class="text-2xl font-bold text-white">$<%= totalWagered %>
            </p>
        </div>
        <div class="card-glass rounded-xl p-4 text-center">
            <p class="text-gray-400 text-sm mb-1">Pending</p>
            <p class="text-2xl font-bold text-yellow-400">
                <%= pendingCount %>
            </p>
        </div>
        <div class="card-glass rounded-xl p-4 text-center">
            <p class="text-gray-400 text-sm mb-1">Claimable</p>
            <p class="text-2xl font-bold text-green-400">$<%= claimableAmount %>
            </p>
        </div>
    </div>

    <!-- Bets List -->
    <div class="space-y-4">
        <% bets.forEach(function(bet) { %>
            <div class="card-glass rounded-xl p-5">
                <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                    <!-- Market Info -->
                    <div class="flex-1">
                        <div class="flex items-center gap-2 mb-2">
                            <span class="inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-medium rounded-full 
                                <%= bet.market.isOpen ? 'bg-green-500/20 text-green-400' : 
                                   bet.market.isResolved ? 'bg-blue-500/20 text-blue-400' : 
                                   'bg-yellow-500/20 text-yellow-400' %>">
                                <% if (bet.market.isOpen) { %>
                                    <span class="w-1.5 h-1.5 bg-green-400 rounded-full animate-pulse"></span>
                                    <% } %>
                                        <%= bet.market.stateLabel %>
                            </span>
                            <span class="text-gray-500 text-xs font-mono">#<%= bet.market.id %></span>
                        </div>
                        <a href="/market/<%= bet.market.id %>"
                            class="text-lg font-semibold hover:text-primary transition-colors">
                            <%= bet.market.question %>
                        </a>
                    </div>

                    <!-- Bet Details -->
                    <div class="flex flex-wrap items-center gap-4 md:gap-6">
                        <!-- Position -->
                        <div class="text-center">
                            <p class="text-gray-400 text-xs mb-1">Your Bet</p>
                            <div class="flex items-center gap-2">
                                <% if (bet.yesBets> 0) { %>
                                    <span class="px-3 py-1 bg-yes/20 text-yes rounded-lg text-sm font-semibold">
                                        YES $<%= bet.yesBetsFormatted %>
                                    </span>
                                    <% } %>
                                        <% if (bet.noBets> 0) { %>
                                            <span class="px-3 py-1 bg-no/20 text-no rounded-lg text-sm font-semibold">
                                                NO $<%= bet.noBetsFormatted %>
                                            </span>
                                            <% } %>
                            </div>
                        </div>

                        <!-- Status / Action -->
                        <div class="text-center min-w-[100px]">
                            <% if (bet.market.isResolved) { %>
                                <% if (bet.isWinner && !bet.claimed) { %>
                                    <button onclick="claimPayout(<%= bet.market.id %>)"
                                        class="px-4 py-2 btn-yes text-white rounded-lg text-sm font-semibold transition-all">
                                        Claim $<%= bet.claimableAmount %>
                                    </button>
                                    <% } else if (bet.isWinner && bet.claimed) { %>
                                        <span class="text-blue-400 text-sm font-medium">âœ“ Claimed</span>
                                        <% } else { %>
                                            <span class="text-red-400 text-sm font-medium">Lost</span>
                                            <% } %>
                                                <% } else if (bet.market.isOpen) { %>
                                                    <span class="text-green-400 text-sm font-medium">Active</span>
                                                    <% } else { %>
                                                        <span class="text-yellow-400 text-sm font-medium">Pending</span>
                                                        <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
    </div>

    <% } else { %>
        <!-- Empty State -->
        <div class="card-glass rounded-xl p-12 text-center">
            <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-primary/20 mb-6">
                <svg class="w-10 h-10 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                        d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
            </div>
            <h3 class="text-xl font-semibold mb-3">No Bets Yet</h3>
            <p class="text-gray-400 max-w-md mx-auto mb-6">
                You haven't placed any bets yet. Browse the markets and make your first prediction!
            </p>
            <a href="/"
                class="inline-flex items-center gap-2 px-6 py-3 btn-primary text-white rounded-lg font-semibold transition-all focus:ring-2 focus:ring-primary/50">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
                Browse Markets
            </a>
        </div>
        <% } %>