<% if (typeof markets !=='undefined' && markets.length> 0) { %>
    <!-- Markets Grid -->
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3" role="list">
        <% markets.forEach(function(market) { %>
            <div role="listitem">
                <%- include('./market-card', { market: market }) %>
            </div>
            <% }); %>
    </div>

    <!-- Markets Count -->
    <p class="text-center text-gray-500 text-sm mt-6">
        Showing <%= markets.length %> market<%= markets.length !==1 ? 's' : '' %>
    </p>
    <% } else { %>
        <!-- Empty State -->
        <div class="card-glass rounded-xl p-12 text-center">
            <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-primary/20 mb-6">
                <svg class="w-10 h-10 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                        d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
            </div>
            <h3 class="text-xl font-semibold mb-3">No Markets Yet</h3>
            <p class="text-gray-400 max-w-md mx-auto mb-6">
                Prediction markets for startup fundraises will appear here. Check back soon for exciting opportunities
                to bet.
            </p>

            <!-- Admin Create Market Prompt -->
            <div id="empty-state-admin" class="hidden admin-only">
                <a href="/admin/create-market"
                    class="inline-flex items-center gap-2 px-6 py-3 bg-secondary hover:bg-secondary/80 text-white rounded-lg font-semibold transition-all focus:ring-2 focus:ring-secondary/50">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Create First Market
                </a>
            </div>
        </div>
        <% } %>