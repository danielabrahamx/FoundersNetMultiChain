{
    "name": "@foundersnet/contracts",
    "version": "1.0.0",
    "private": true,
    "description": "FoundersNet smart contracts for Polygon",
    "scripts": {
        "compile": "hardhat compile",
        "test": "hardhat test",
        "test:coverage": "hardhat coverage",
        "test:gas": "REPORT_GAS=true hardhat test",
        "test:integration": "hardhat test test/integration/*.test.ts --network localhost",
        "deploy:local": "hardhat deploy --network localhost",
        "deploy:sepolia": "hardhat deploy --network sepolia",
        "deploy:amoy": "hardhat deploy --network amoy",
        "deploy:polygon": "hardhat deploy --network polygon",
        "verify:sepolia": "hardhat verify --network sepolia",
        "verify:amoy": "hardhat verify --network amoy",
        "verify:polygon": "hardhat verify --network polygon",
        "check:sepolia": "hardhat run scripts/check-network.ts --network sepolia",
        "check:amoy": "hardhat run scripts/check-network.ts --network amoy",
        "check:polygon": "hardhat run scripts/check-network.ts --network polygon",
        "balance:sepolia": "hardhat run scripts/check-balance.ts --network sepolia",
        "balance:amoy": "hardhat run scripts/check-balance.ts --network amoy",
        "balance:polygon": "hardhat run scripts/check-balance.ts --network polygon",
        "market:create:sepolia": "hardhat run scripts/create-test-market.ts --network sepolia",
        "market:create:amoy": "hardhat run scripts/create-test-market.ts --network amoy",
        "market:create:polygon": "hardhat run scripts/create-test-market.ts --network polygon",
        "market:create:local": "hardhat run scripts/create-test-market.ts --network localhost",
        "seed:local": "hardhat run scripts/seed-local.ts --network localhost",
        "fund:accounts": "hardhat run scripts/fund-test-accounts.ts --network localhost",
        "node": "hardhat node",
        "node:fork": "hardhat node --fork https://polygon-mainnet.g.alchemy.com/v2/${ALCHEMY_API_KEY}",
        "clean": "hardhat clean && rm -rf cache artifacts typechain-types",
        "lint": "solhint 'contracts/**/*.sol'",
        "size": "hardhat size-contracts"
    },
    "devDependencies": {
        "@nomicfoundation/hardhat-toolbox": "^5.0.0",
        "@nomicfoundation/hardhat-verify": "^2.0.11",
        "@openzeppelin/contracts": "^5.0.2",
        "@typechain/ethers-v6": "^0.5.1",
        "@typechain/hardhat": "^9.1.0",
        "@types/chai": "^4.3.11",
        "@types/mocha": "^10.0.6",
        "chai": "^4.3.10",
        "dotenv": "^16.4.5",
        "ethers": "^6.13.0",
        "hardhat": "^2.22.15",
        "hardhat-contract-sizer": "^2.10.0",
        "hardhat-deploy": "^0.12.4",
        "hardhat-gas-reporter": "^1.0.10",
        "solhint": "^5.0.3",
        "solidity-coverage": "^0.8.13",
        "ts-node": "^10.9.2",
        "typechain": "^8.3.2",
        "typescript": "^5.6.3"
    },
    "dependencies": {}
}